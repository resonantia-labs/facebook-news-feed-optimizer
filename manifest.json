{
  "manifest_version": 3,
  "name": "Facebook News Feed Optimizer",
  "description": "Get control over the content to digest based on your preferences",
  "version": "0.0.1",
  "action": {
    "default_icon": "icons/icon-64.png",
    "default_title": "Change Profile",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content-script.js"],
      "matches": [
        "https://www.facebook.com/",
        "https://www.facebook.com/*"
      ]
    }
  ]
}